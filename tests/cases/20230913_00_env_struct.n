import coroutine as co

type atm_t = struct {
    string name
    string address
    f32 amount
    int count
    string bank
}

fn make_atm():fn(f32):atm_t {
    var atm = atm_t{
        name = 'high park',
        address = 'shenzhen',
        amount = 1000,
        count = 0,
        bank = 'china bank'
    }

    return fn(f32 amount):atm_t {
        atm.amount -= amount
        return atm
    }
}

// 进行 gc 检测 atm 捕获的情况
runtime_force_gc()
co.sleep(500) // wait gc finish

var atm1_draw = make_atm()
println(atm1_draw(100).amount)
println(atm1_draw(100).amount)

