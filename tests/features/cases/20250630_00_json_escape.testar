=== test_json_escape3
--- main.n
import json

fn main() {
    var s = `hello\nworld`
    var j = json.serialize(s)
    println(j)
    assert(j.len() == 15 && j == `"hello\\nworld"`)
}

=== test_json_escape4
--- main.n
import json

fn main() {
    var s = "hello\nworld"
    var j = json.serialize(s)
    println(j, j.len())
    assert(j.len() == 14 && j == `"hello\nworld"`)
}
