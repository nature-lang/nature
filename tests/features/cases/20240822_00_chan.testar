import co
import time

fn main():void! {
    i64 start = time.now().ms_timestamp()
    int count = 1000
    var done = chan<bool>.new()
    for int i = 0; i < count; i+=1 {
        go fn(int id):void! {
            co.sleep(100)
            done.send(true)
        }(i)
    }

    for int i = 0; i < count; i+=1 {
        done.recv()
    }

    var end = time.now().ms_timestamp()
    println('done, use time: ', end, start, end - start)
    assert(end - start < 300)
}

