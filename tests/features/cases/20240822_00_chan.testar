import co

fn handle(chan<int> ch) {
    for v in ch {
        println('recv v ->', v)
    }
}

fn main() {
    var ch = chan<int>.new()
    go handle(ch)

    ch.send(1)
    ch.send(3)
    ch.send(5)
    co.sleep(100)
}

